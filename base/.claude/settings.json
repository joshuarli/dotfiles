{
  "model": "claude-sonnet-4-6",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'claude needs input!' -execute \"open -a tty.app; /opt/homebrew/bin/tmux select-window -t $TMUX_PANE; /opt/homebrew/bin/tmux select-pane -t $TMUX_PANE\" < /dev/null"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "jaq -r '(.model.display_name // \"Unknown\") as $m | (.context_window.used_percentage // 0) as $pct | \"\\($m) \\($pct)% ctx\"'"
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "skipDangerousModePermissionPrompt": true
}
